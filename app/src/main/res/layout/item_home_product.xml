<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:orientation="vertical"
    android:padding="@dimen/inner_pad">

    <ImageView
        android:id="@+id/homeProductPicture"
        android:layout_width="@dimen/product_picture"
        android:layout_height="@dimen/product_picture"
        android:src="@drawable/ic_product_demo_photo_24" />

    <TextView
        android:id="@+id/homeProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headline_text"
        android:textColor="@color/product_price"
        android:textStyle="bold"
        android:text="Product_Price" />

    <TextView
        android:id="@+id/homeProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Product_Name" />

    <TextView
        android:id="@+id/homeSellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Posted By-\nSeller_Name" />

</LinearLayout>