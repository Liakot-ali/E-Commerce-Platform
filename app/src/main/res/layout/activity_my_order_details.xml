<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.ActivityMyOrderDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/orderDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">

        <TextView
            android:id="@+id/OrderDetailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Order Details"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/toolbar_text" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/layout_pad">


            <ImageView
                android:id="@+id/orderDetailsPicture"
                android:layout_width="@dimen/product_picture"
                android:layout_height="@dimen/product_picture"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_pad"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_product_demo_photo_24" />

            <TextView
                android:id="@+id/orderDetailsProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Product Name"
                android:padding="@dimen/inner_pad"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/orderDetailsProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Product Price"
                android:padding="@dimen/inner_pad"
                android:textColor="@color/red"
                android:textSize="@dimen/normal_text">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/orderDetailsSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seller Name"
                android:padding="@dimen/inner_pad"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/orderDetailsSellerPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seller Phone No"
                android:padding="@dimen/inner_pad"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/orderDetailsSellerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seller Email"
                android:padding="@dimen/inner_pad"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>