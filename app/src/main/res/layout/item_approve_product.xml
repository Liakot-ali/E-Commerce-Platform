<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:padding="@dimen/inner_pad"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/approveProductPicture"
        android:layout_width="@dimen/item_icon"
        android:layout_height="@dimen/item_icon"
        android:layout_gravity="center"
        android:layout_margin="@dimen/inner_pad"
        android:src="@drawable/ic_product_demo_photo_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/approveProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:text="Product Name" />

        <TextView
            android:id="@+id/approveProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/headline_text"
            android:textColor="@color/red"
            android:text="Price" />
    </LinearLayout>

    <Button
        android:id="@+id/approveProductBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:text="Approve" />
</LinearLayout>