<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCustomerDetails"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Cus_detailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">

        <TextView
            android:id="@+id/Cus_detailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_pad"
            android:text="Customer_details"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/toolbar_text" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_pad"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Information" />

            <ImageView
                android:id="@+id/CUS_detailsImg"
                android:layout_width="@dimen/product_picture"
                android:layout_height="@dimen/product_picture"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_pad"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_product_demo_photo_24" />

            <TextView
                android:id="@+id/Cus_detailsProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Product Name"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/Cus_detailsProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Product Price"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/normal_text">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Information" />

            <TextView
                android:id="@+id/Cus_detailsCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Customer Name"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/Cus_detailsCustomerPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Customer PhoneNo"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/Cus_detailsCustomerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Customer Address"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/Cus_detailsNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Note"
                android:padding="@dimen/inner_pad"
                android:textSize="@dimen/toolbar_text">

            </TextView>

            <Button
                android:id="@+id/cus_detailsResponseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_pad"
                android:text="Response"
                android:textSize="@dimen/button_text" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>