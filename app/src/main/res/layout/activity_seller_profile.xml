<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Seller.ActivitySellerProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/SellerProfileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">


        <TextView
            android:id="@+id/SellerProfileToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Profile"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/toolbar_text">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/layout_pad">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SellerProfilePicture"
                android:layout_width="@dimen/user_picture"
                android:layout_height="@dimen/user_picture"
                android:layout_gravity="center"
                android:src="@drawable/ic_demo_profile_picture_24"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/border_width" />

            <TextView
                android:id="@+id/SellerProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/inner_pad"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />


            <TextView
                android:id="@+id/SellerProfilePhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/inner_pad"
                android:text="Phone No"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />
            <TextView
                android:id="@+id/SellerProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/inner_pad"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />
            <TextView
                android:id="@+id/SellerProfileId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/inner_pad"
                android:text="Id"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />


            <Button
                android:id="@+id/SellerProfileReportBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_pad"
                android:text="Report"
                android:layout_marginTop="@dimen/inner_pad"
                android:layout_marginStart="@dimen/inner_pad"
                android:textSize="@dimen/button_text" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>