<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAdminSellerDetails"
    android:orientation="vertical">


<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Seller_detailsToolbar"
    android:background="@color/toolbar_background"
    android:theme="?attr/actionBarTheme"
    android:minHeight="?attr/actionBarSize"
    android:visibility="visible"

    <TextView
        android:id="@+id/Seller_detailsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller_details"
        android:textColor="@color/toolbar_text"
        android:padding="5sp"
        android:textSize="20sp"/>





    <ImageView
        android:id="@+id/Seller_detailsImg"
        android:layout_width="@dimen/product_picture"
        android:layout_height="@dimen/product_picture"
        android:src="@drawable/ic_product_demo_photo_24"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_pad" />

        <TextView
            android:id="@+id/Seller_detailsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seller Name"
            android:padding="@dimen/inner_pad"
            android:gravity="center"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Seller_detailsPhoneNo"
            android:hint="Seller Phone"
            android:padding="@dimen/inner_pad"
            android:gravity="center"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">
        </TextView>
        <TextView
            android:id="@+id/Seller_detailsEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seller Email"
            android:padding="@dimen/inner_pad"
            android:gravity="center"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">
        </TextView>
        <TextView
            android:id="@+id/Seller_detailsAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:padding="@dimen/inner_pad"
            android:gravity="center"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">
        </TextView>
        <TextView
            android:id="@+id/Seller_detailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="@dimen/inner_pad"
            android:gravity="center"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">

        </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Seller_detailsApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Approve"
            android:layout_weight="1"
            android:padding="@dimen/inner_pad"
            android:layout_margin="@dimen/layout_pad"
            android:textSize="@dimen/toolbar_text">

        </Button>

        <Button
            android:id="@+id/Seller_detailsDeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/layout_pad"
            android:gravity="center_horizontal"
            android:hint="Deny"
            android:padding="@dimen/inner_pad"
            android:textSize="@dimen/toolbar_text">

        </Button>
    </LinearLayout>

    </LinearLayout>
