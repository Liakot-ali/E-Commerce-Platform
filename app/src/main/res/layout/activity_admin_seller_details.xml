<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminApproveSellerDetails">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Seller_detailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">

        <TextView
            android:id="@+id/Seller_detailsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Seller_details"
            android:textColor="@color/toolbar_text"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Seller_detailsImg"
                android:layout_width="@dimen/user_picture"
                android:layout_height="@dimen/user_picture"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_pad"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_product_demo_photo_24" />

            <TextView
                android:id="@+id/Seller_detailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/inner_pad"
                android:text="Seller Name"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text">

            </TextView>

            <TextView
                android:id="@+id/Seller_detailsPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/inner_pad"
                android:text="Seller Phone"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text"></TextView>

            <TextView
                android:id="@+id/Seller_detailsEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/inner_pad"
                android:text="Seller Email"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text"></TextView>

            <TextView
                android:id="@+id/Seller_detailsAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/inner_pad"
                android:text="Address"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text"></TextView>

            <TextView
                android:id="@+id/Seller_detailsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/inner_pad"
                android:text="Description"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/normal_text">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_pad">

                <Button
                    android:id="@+id/adminSellerDetailsApproveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/inner_pad"
                    android:layout_weight="1"
                    android:text="Approve"
                    android:textColor="@color/black">

                </Button>

                <Button
                    android:id="@+id/adminSellerDetailsDenyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inner_pad"
                    android:layout_weight="1"
                    android:text="Deny"
                    android:textColor="@color/black">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
