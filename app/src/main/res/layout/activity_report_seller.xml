<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Seller.ActivityReportSeller">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/reportSellerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">


        <TextView
            android:id="@+id/SellerProfileToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Seller"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/toolbar_text">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_pad"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Message"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/headline_text" />

            <EditText
                android:id="@+id/reportSellerMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="left|bottom"
                android:hint="Write details about your problem"
                android:inputType="textPersonName"
                android:maxHeight="@dimen/product_height"
                android:minHeight="@dimen/product_height" />

            <Button
                android:id="@+id/reportSellerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>