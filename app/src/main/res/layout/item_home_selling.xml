<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/inner_pad"
        android:weightSum="10">

        <ImageView
            android:id="@+id/homeProductPicture"
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_product_demo_photo_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/homeProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/inner_pad"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Product_Name"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/homeCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/inner_pad"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="CustomerName "
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/homeProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="price"
            android:gravity="center"
            android:textColor="@color/product_price"
            android:textSize="@dimen/headline_text"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>