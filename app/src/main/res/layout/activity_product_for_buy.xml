<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".product_for_buy">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shopProfileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Product Details"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_pad"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_pad"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProductForBuyProfilePicture"
                    android:layout_width="@dimen/toolbar_icon"
                    android:layout_height="@dimen/toolbar_icon"
                    android:src="@drawable/ic_demo_profile_picture_24"
                    app:civ_border_color="@color/toolbar_text"
                    app:civ_border_width="@dimen/border_width" />

                <TextView
                    android:id="@+id/ProductForBuyUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/inner_pad"
                    android:text="User_Name"
                    android:textColor="@color/toolbar_text"
                    android:textSize="@dimen/toolbar_text" />


            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/product_picture"
                android:layout_height="@dimen/product_picture"
                android:id="@+id/postproduct_picture"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_pad"
                android:layout_marginBottom="@dimen/layout_pad"
                android:padding="@dimen/inner_pad"
                android:src="@drawable/ic_launcher_background"
                >

            </ImageView>

              <TextView
                android:id="@+id/ProductForBuyProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:layout_marginTop="@dimen/layout_pad"
                android:padding="@dimen/inner_pad"
                android:layout_margin="@dimen/layout_pad"
                android:textSize="@dimen/normal_text"
                />


            <TextView
                android:id="@+id/ProductForBuyprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:layout_marginTop="@dimen/layout_pad"
                android:padding="@dimen/inner_pad"
                android:layout_margin="@dimen/layout_pad"
                android:textSize="@dimen/normal_text"
                />


            <TextView
                android:id="@+id/ProductForBuydescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:layout_marginTop="@dimen/layout_pad"
                android:padding="@dimen/inner_pad"
                android:layout_margin="@dimen/layout_pad"
                android:textSize="@dimen/normal_text"
                />



            <Button
                android:id="@+id/postproduct_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_pad"
                android:gravity="center"
                android:text="Buy Now"
                android:textSize="@dimen/button_text">

            </Button>

        </LinearLayout>

    </ScrollView>


</LinearLayout>